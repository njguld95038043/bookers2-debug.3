<h2>Results index</h2>

<table>
  <% if @range == "User" %>
   <tbody>
     <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size:"100x100" %></td>
        <td><%= link_to user.name, user_path(user) %></td>
      </tr>
     <% end %>
   </tbody>
  <% else %>
   <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
     <% end %>
   </tbody>
  <% end %>
</table>